<div class = "container ">
    <h1>New game</h1>
    <div class ="d-flex justify-content-center">
    <% @letters.each do |letter| %>
        <div class="mx-3 p-2 bg-primary text-white font-weight-bold"><%=letter%></div>
    <%end %>
    </div> 
    <p class ="mt-4">What is the longest word that you can find</p>  
    <form action="score" method="post">
    <div class="mb-3 d-flex">
        <input type="text" name="word" class="form-control">
        <input type="submit" value="Ask!" class="btn btn-primary">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <%= hidden_field_tag :letters, @letters %>
    </div>  
    </form> 

</div>

    
